@{
}

@model Book

<div class="card card-outline-primary m-1 p-1">
    <div class="bg-faded p-1">
        <p>BookId: @Model.BookId</p>
        <h4>Book Title: @Model.Title</h4>
        <p>Author: @Model.Author</p>
        <p>Publisher: @Model.Publisher</p>
        <p>ISBN: @Model.ISBN</p>
        <p>Classifcation: @Model.Classification</p>
        <p> Category: @Model.Category</p>
        <div class="card-text p-1">
            <p>$@Model.Price</p>
        </div>
        <p>@Model.PageNo pages</p>
    </div>
    <form id="@Model.BookId" asp-page="/Cart" method="post">
        <input type="hidden" asp-for="BookId" />
        <input type="hidden" name="returnUrl" 
               value="@ViewContext.HttpContext.Request.PathAndQuery()" />
        <span class="card-text p-1">
            @Model.Title
            <button type="submit" class="btn-success btn-sm pull-right"
                    style="float:right">
                Add to Cart
            </button>
        </span>
    </form>
</div>